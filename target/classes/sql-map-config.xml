<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>	
	<!-- Alias 설정 -->
	<typeAliases>
		<typeAlias alias="board" type="com.springbook.biz.board.BoardVO" />
		<typeAlias alias="member" type="com.springbook.biz.user.UserVO" />
		<typeAlias alias="reply" type="com.springbook.biz.board.reply.ReplyVO" />
		
		<!-- <typeAlias alias="JoinDAO" type="com.springbook.biz.join.JoinVO" /> -->
	</typeAliases>

	
	<!-- Sql Mapper 설정 -->
	<mappers>
		<mapper resource="mapper/board-mapping.xml" />
		<mapper resource="mapper/member-mapping.xml" />
		<mapper resource="mapper/reply-mapping.xml" />
		<!-- <mapper resource="mapper/userMapper.xml" /> -->
	</mappers>
</configuration>